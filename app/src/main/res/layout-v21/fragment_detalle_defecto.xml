                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/txt_Puesto"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_Puesto" />


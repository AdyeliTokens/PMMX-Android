<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pmi.ispmmx.maya.Activities.PlanAttainmentActivity"
    tools:showIn="@layout/activity_plan_attainment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <devs.mulham.horizontalcalendar.HorizontalCalendarView
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            app:selectedDateBackground="@color/colorAccent"
            app:selectorColor="@color/colorPrimary"
            app:textColorNormal="@color/colorSecondaryText"
            app:textColorSelected="@color/colorWhite" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_secciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

